<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.henrik.googlemapsexample.Activity_UserProfile"
    android:background="#107896">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="90dp"
        android:id="@+id/bottomLine" />
    <View
        android:layout_width="1dp"
        android:layout_height="90dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="190dp"
        android:id="@+id/leftLine" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lv. 40"
        android:id="@+id/levelLabel"
        android:textSize="50dp"
        android:textColor="#F4F4F4"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User: "
        android:id="@+id/userLabel"
        android:textColor="#F4F4F4"
        android:layout_alignParentTop="true"
        android:textSize="16dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/levelLabel" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Likes: "
        android:id="@+id/likesLabel"
        android:textIsSelectable="false"
        android:textColor="#f4f4f4"
        android:layout_below="@+id/userLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Dislikes: "
        android:id="@+id/dislikesLabel"
        android:textColor="#f4f4f4"
        android:layout_below="@+id/likesLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recentReviews"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent reviews:"
        android:id="@+id/textView7"
        android:layout_below="@+id/bottomLine"
        android:textSize="32dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textColor="#F4F4F4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80"
        android:id="@+id/likesAmountLabel"
        android:layout_alignTop="@+id/likesLabel"
        android:layout_toRightOf="@+id/likesLabel"
        android:layout_toLeftOf="@+id/levelLabel"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:textAlignment="center"
        android:textColor="#3fe502" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40"
        android:id="@+id/dislikesAmountLabel"
        android:textAlignment="center"
        android:layout_alignTop="@+id/dislikesLabel"
        android:layout_toLeftOf="@+id/levelLabel"
        android:layout_toRightOf="@+id/dislikesLabel"
        android:textColor="#ff0011" />

</RelativeLayout>
